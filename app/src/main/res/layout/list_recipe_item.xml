<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_recipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/elevation_rect"
    android:elevation="4dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/vanillaWhite"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_recipe_image"
            android:layout_width="230dp"
            android:layout_height="115dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_recipe_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorText"
                tools:text="BAKEVERK" />

            <TextView
                android:id="@+id/list_item_recipe_servings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorText"
                tools:text="Servings: 8" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>